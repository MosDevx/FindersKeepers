<div id="User-query-metrics" class="h-screen w-screen flex  items-center bg-gray-100">
  <div class="max-w-lg  p-8 bg-white rounded-lg shadow-md">
    <h2 class="text-2xl font-bold mb-4">User Query Metrics</h2>
    <div class="grid grid-cols-2 gap-4">
      <div>
        <p class="text-lg font-semibold">Total queries:</p>
        <p class="text-xl font-semibold"><%= @total_queries %></p>
      </div>
      <div>
        <p class="text-lg font-semibold">Users Served:</p>
        <p class="text-xl font-semibold"><%= @unique_visitors %></p>
      </div>
      <div>
        <p class="text-lg font-semibold">Unique queries:</p>
        <p class="text-xl font-semibold"><%= @unique_queries %></p>
      </div>
    </div>
    <div class="mt-8">
      <h2 class="text-2xl font-bold mb-4">10 Most Popular Queries</h2>
      <ul class="list-disc list-inside">
        <% @most_common_queries.each do |query, count| %>
          <li class="text-lg"><%= query %> (searched <%= count %> times)</li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
