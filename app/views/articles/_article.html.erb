<div id="<%= dom_id(article) %>" class="bg-white rounded-lg shadow-md p-6 border border-gray-200 hover:shadow-lg transition-shadow duration-200 ease-in-out">
  <h2 class="text-2xl font-bold mb-2 text-gray-700 hover:text-blue-600 transition-colors duration-200">
    <%= article.title %>
  </h2>

  <div class="grid grid-cols-2 gap-4 my-4">
    <p class="text-gray-600">
      <strong class="block font-medium mb-1 text-blue-600">Category:</strong>
      <%= article.category %>
    </p>

    <p class="text-gray-600">
      <strong class="block font-medium mb-1 text-blue-600">Author:</strong>
      <%= article.author %>
    </p>

    <p class="text-gray-600">
      <strong class="block font-medium mb-1 text-blue-600">Published date:</strong>
      <%= article.published_date %>
    </p>
  </div>
</div>