<div class="mx-auto md:w-2/3 w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-100 mb-5 text-green-800 font-medium rounded-lg" id="notice"><%= notice %></p>
  <% end %>

  <div class="">
    <%= render @article %>
  </div>

  <div class="flex justify-between mt-4">
    <%= link_to "Edit this article", edit_article_path(@article), class: "rounded-lg py-2 px-4 bg-blue-500 text-white font-medium hover:bg-blue-600 transition-colors duration-200" %>
    <%= link_to "Back to articles", articles_path, class: "rounded-lg py-2 px-4 bg-gray-500 text-white font-medium hover:bg-gray-600 transition-colors duration-200" %>
  </div>
</div>
