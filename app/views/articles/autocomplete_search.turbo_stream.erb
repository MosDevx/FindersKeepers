<%= turbo_stream.replace "search-results" do %>
 <turbo-frame id="search-results">
  <%= render partial: 'articles/results', locals: { results: @results , no_search_query:@no_search_query} %>
    </turbo-frame>
<% end %>

<%= turbo_stream.replace "search-form" do %>
  <turbo-frame id="search-form">
    <%= form_with url: search_articles_path, method: :get, data: { turbo_stream: true,controller: "search-box",action: "submit->search-box#submit", search_box_target: "form" } do |form| %>
  <%= form.label :query, "Search Articles" %>

  <%= form.text_field  :query, value: params[:query], placeholder: "Enter Search Query", id: "search-box", data:{action:"input->search-box#search",search_box_target: "input" } %>

  <%= form.hidden_field :source, id: "query-source", value: "form" %>
  <%= form.submit "Search" %>
<% end %>
  </turbo-frame>
<% end %>
